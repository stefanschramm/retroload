{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2020",
    "rootDir": "./src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "declaration": true
  }
}
